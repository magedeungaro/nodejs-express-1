extends ../layouts/application-layout.pug
include ./components/_card.pug

block content
  .container.mt-3
    h1 Our products

    a(href="/products/new" class="btn btn-outline-primary mx-2 mt-3") Add new product
    a(href="/" class="btn btn-outline-dark mx-2 mt-3") Home

    .row
      if products.length > 0
        each product in products
          .col-12.col-md-6.col-lg-3.mt-3
            +productCard(product)
      else
        p No products yet!
